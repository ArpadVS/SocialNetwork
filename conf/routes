# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

#posts
GET     /api/posts                  controllers.PostController.getAll
GET     /api/posts/:id                  controllers.PostController.getById(id: Long)
POST    /api/posts/add              controllers.PostController.add
PUT     /api/posts/update/:id           controllers.PostController.update(id: Long)
DELETE  /api/posts/delete/:id         controllers.PostController.delete(id: Long)
GET     /api/posts/status           controllers.PostController.checkStatus()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
